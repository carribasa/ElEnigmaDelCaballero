<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cred_bg">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="57dp"
        android:layout_height="38dp"
        android:onClick="irAtras"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.075"
        app:srcCompat="@drawable/boton_atras" />

    <LinearLayout
        android:id="@+id/linearPausa"
        android:layout_width="376dp"
        android:layout_height="279dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="51dp"
        android:background="@drawable/menu_fondo"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1">

        <Space
            android:layout_width="match_parent"
            android:layout_height="18dp" />

        <ImageView
            android:id="@+id/menu_imV01"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ajustes_banner" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/sinistre"
            android:gravity="center"
            android:text="Volumen"
            android:textSize="18sp"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/volumeSeekBar"
            android:layout_width="334dp"
            android:layout_height="30dp"
            android:layout_below="@id/volumeSeekBar"
            android:layout_gravity="center_horizontal"
            android:progressTint="#8F661D" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <LinearLayout
            android:layout_width="313dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivMute"
                android:layout_width="148dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:foregroundGravity="right"
                app:srcCompat="@drawable/ajustes_btnmute" />

            <CheckBox
                android:id="@+id/cbMute"
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:fontFamily="@font/sinistre" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <ImageView
            android:id="@+id/ivGuardarProgreso"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:onClick="guardar"
            app:srcCompat="@drawable/ajustes_btnguardarprogreso" />

        <ImageView
            android:id="@+id/ivBorrarProgreso"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:onClick="borrarProgreso"
            app:srcCompat="@drawable/ajustes_btnborrarprogreso" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>